	Escribir 'Tu resultado es: ',Suma
	// Resta
	Definir resta1 Como Real
	Definir resta2 Como Real
	Escribir 'Primer numero a restar'
	Leer resta1
	Escribir 'Segundo numero a restar'
	Leer resta2
	Resta <- resta1-resta2
	Escribir 'Tu resultado es: ',Resta
	// Division
	Definir div1 Como Real
	Definir div2 Como Real
	Escribir 'Primer numero a dividir'
	Leer div1
	Escribir 'Segundo numero a dividir'
