	Escribir 'Tu resultado es: ',Division
	// Multiplicacion
	Definir mul1 Como Real
	Definir mul2 Como Real
	Definir mul3 Como Real
	Escribir 'Primer numero a multiplicar'
	Leer mul1
	Escribir 'Segundo numero a multiplicar'
	Leer mul2
	Multiplicación <- mul1*mul2
	Escribir 'Tu resultado es: ',Multiplicación
	// Modulo
	Definir mod1 Como Real
	Definir mod2 Como Real
	Escribir 'Primer numero del modulo'
	Leer mod1
	Escribir 'Segundo numero del modulo'
	Leer mod2
	Modulo <- mod1 MOD mod2
	Escribir 'Tu resultado es: ',Modulo
	// Final
	Escribir 'Fin de calculadora'
